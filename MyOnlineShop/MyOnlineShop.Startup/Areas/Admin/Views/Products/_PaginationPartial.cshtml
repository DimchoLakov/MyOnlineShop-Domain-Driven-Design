@model SearchProductsOutputModel

<div class="text-center">
    <ul class="pagination justify-content-center">

        @if (Model.Page - 1 < 1)
        {
            <li class="page-item disabled">
                <a class="page-link" asp-area="" asp-controller="Products" asp-action="Index" asp-route-currentPage="@(Model.Page - 1)"
                   asp-route-name="@ViewData["Name"]" asp-route-description="@ViewData["Description"]" asp-route-minPrice="@ViewData["MinPrice"]" asp-route-maxPrice="@ViewData["MaxPrice"]" aria-label="Previous">
                    <span aria-hidden="true">Previous</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" asp-area="" asp-controller="Products" asp-action="Index" asp-route-currentPage="@(Model.Page - 1)"
                   asp-route-name="@ViewData["Name"]" asp-route-description="@ViewData["Description"]" asp-route-minPrice="@ViewData["MinPrice"]" asp-route-maxPrice="@ViewData["MaxPrice"]" aria-label="Previous">
                    <span aria-hidden="true">Previous</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            if (i == Model.Page)
            {
                <li class="page-item active">
                    <a class="page-link disabled">@i.ToString()</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-area="" asp-controller="Products" asp-action="Index" asp-route-currentPage="@i"
                       asp-route-name="@ViewData["Name"]" asp-route-description="@ViewData["Description"]" asp-route-minPrice="@ViewData["MinPrice"]" asp-route-maxPrice="@ViewData["MaxPrice"]">@i.ToString()</a>
                </li>
            }
        }
        @if (Model.Page + 1 > Model.TotalPages)
        {
            <li class="page-item disabled">
                <a class="page-link" asp-area="" asp-controller="Products" asp-action="Index" asp-route-currentPage="@(Model.Page + 1)"
                   asp-route-name="@ViewData["Name"]" asp-route-description="@ViewData["Description"]" asp-route-minPrice="@ViewData["MinPrice"]" asp-route-maxPrice="@ViewData["MaxPrice"]" aria-label="Next">
                    <span aria-hidden="true">Next</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        }
        else
        {
            <li class="page-item">

                <a class="page-link" asp-area="" asp-controller="Products" asp-action="Index" asp-route-currentPage="@(Model.Page + 1)"
                   asp-route-name="@ViewData["Name"]" asp-route-description="@ViewData["Description"]" asp-route-minPrice="@ViewData["MinPrice"]" asp-route-maxPrice="@ViewData["MaxPrice"]" aria-label="Next">
                    <span aria-hidden="true">Next</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        }
    </ul>
</div>