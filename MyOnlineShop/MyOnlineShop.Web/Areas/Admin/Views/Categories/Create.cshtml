@model CreateCategoryCommand
@{
    ViewData["Title"] = "Create New Category";
}

<h2>Create New Product</h2>
<form method="post" asp-area="Admin" asp-controller="Categories" asp-action="Create">
    <div class="form-row">
        <div class="form-group col-6">
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" class="form-control" placeholder="e.g. Cars" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="form-check form-check-inline col-md-2">
            <input asp-for="@Model.IsActive" class="form-check-input" />
            <label asp-for="@Model.IsActive" class="form-check-label"></label>
            <span asp-validation-for="@Model.IsActive" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="@Model.ImageUrl" class="col-form-label mr-2"></label>
            <input asp-for="@Model.ImageUrl" class="form-control" placeholder="Image Url" />
            <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-success">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}