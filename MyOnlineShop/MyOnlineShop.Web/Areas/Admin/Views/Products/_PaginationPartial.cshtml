@model SearchProductsOutputModel

<div class="text-center">
    <ul class="pagination justify-content-center">

        @if (Model.Page - 1 < 1)
        {
            <li class="page-item disabled">
                <a class="page-link" asp-area="Admin" asp-controller="Products" asp-action="Index" asp-route-page="@(Model.Page - 1)"
                   asp-route-name="@this.ViewData[Constants.ControllerViewData.ProductNameKey]"
                   asp-route-description="@this.ViewData[Constants.ControllerViewData.ProductDescriptionKey]"
                   asp-route-minPrice="@this.ViewData[Constants.ControllerViewData.ProductMinPriceKey]"
                   asp-route-maxPrice="@this.ViewData[Constants.ControllerViewData.ProductMaxPriceKey]" aria-label="Previous">
                    <span aria-hidden="true">Previous</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" asp-area="Admin" asp-controller="Products" asp-action="Index" asp-route-page="@(Model.Page - 1)"
                   asp-route-name="@this.ViewData[Constants.ControllerViewData.ProductNameKey]"
                   asp-route-description="@this.ViewData[Constants.ControllerViewData.ProductDescriptionKey]"
                   asp-route-minPrice="@this.ViewData[Constants.ControllerViewData.ProductMinPriceKey]"
                   asp-route-maxPrice="@this.ViewData[Constants.ControllerViewData.ProductMaxPriceKey]" aria-label="Previous">
                    <span aria-hidden="true">Previous</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            if (i == Model.Page)
            {
                <li class="page-item active">
                    <a class="page-link disabled">@i.ToString()</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-area="Admin" asp-controller="Products" asp-action="Index" asp-route-page="@i"
                       asp-route-name="@this.ViewData[Constants.ControllerViewData.ProductNameKey]"
                       asp-route-description="@this.ViewData[Constants.ControllerViewData.ProductDescriptionKey]"
                       asp-route-minPrice="@this.ViewData[Constants.ControllerViewData.ProductMinPriceKey]"
                       asp-route-maxPrice="@this.ViewData[Constants.ControllerViewData.ProductMaxPriceKey]">@i.ToString()</a>
                </li>
            }
        }
        @if (Model.Page + 1 > Model.TotalPages)
        {
            <li class="page-item disabled">
                <a class="page-link" asp-area="Admin" asp-controller="Products" asp-action="Index" asp-route-page="@(Model.Page + 1)"
                   asp-route-name="@this.ViewData[Constants.ControllerViewData.ProductNameKey]"
                   asp-route-description="@this.ViewData[Constants.ControllerViewData.ProductDescriptionKey]"
                   asp-route-minPrice="@this.ViewData[Constants.ControllerViewData.ProductMinPriceKey]"
                   asp-route-maxPrice="@this.ViewData[Constants.ControllerViewData.ProductMaxPriceKey]" aria-label="Next">
                    <span aria-hidden="true">Next</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        }
        else
        {
            <li class="page-item">

                <a class="page-link" asp-area="Admin" asp-controller="Products" asp-action="Index" asp-route-page="@(Model.Page + 1)"
                   asp-route-name="@this.ViewData[Constants.ControllerViewData.ProductNameKey]" 
                   asp-route-description="@this.ViewData[Constants.ControllerViewData.ProductDescriptionKey]"
                   asp-route-minPrice="@this.ViewData[Constants.ControllerViewData.ProductMinPriceKey]"
                   asp-route-maxPrice="@this.ViewData[Constants.ControllerViewData.ProductMaxPriceKey]" aria-label="Next">
                    <span aria-hidden="true">Next</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        }
    </ul>
</div>