@inject ICurrentUser currentUser

<ul class="navbar-nav">
    @if (!string.IsNullOrWhiteSpace(this.currentUser.UserId))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @this.currentUser.Username!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="" asp-controller="Identity" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Identity" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Identity" asp-action="Login">Login</a>
        </li>
    }
</ul>
