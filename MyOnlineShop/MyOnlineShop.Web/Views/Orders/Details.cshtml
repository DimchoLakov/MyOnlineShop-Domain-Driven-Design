@model OrderDetailsOutputModel
@{
    ViewData["Title"] = "Order Details";
}

<div class="row">
    <div class="col-md-12">
        <h3>Order Details</h3>
    </div>
    <div class="col-md-6">
        <p><b>Order Date:</b> @Model.OrderDate.ToString("f")</p>
        <p><b>Order Total:</b> $@Model.TotalPrice.ToString("N2")</p>
    </div>
    <div class="col-md-6">
        <p><b>Address Line:</b> @Model.Address.AddressLine</p>
        <p><b>Town:</b> @Model.Address.Town</p>
        <p><b>Post Code:</b> @Model.Address.PostCode</p>
        <p><b>Country:</b> @Model.Address.Country</p>
    </div>
    @foreach (var orderItemDetails in Model.OrderItems)
    {
        <div class="col-md-4 mb-2">
            <div class="media">
                <img src="@orderItemDetails.ImageUrl" alt="Image" />
            </div>
            <div class="order-item no-top-border">
                <p><b>@orderItemDetails.Name</b></p>
                <p>Description: @orderItemDetails.Description</p>
                <p>Price: @orderItemDetails.ProductPrice.ToString("C")</p>
                <p>Quanity: @orderItemDetails.Quantity</p>
            </div>
        </div>
    }
</div>